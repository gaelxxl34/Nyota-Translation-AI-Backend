# Production Environment Variables for NTC Backend
# Copy this file to .env.production for production deployment

# Server Configuration
PORT=3001
NODE_ENV=production

# Frontend Configuration
FRONTEND_URL=https://nyotatranslate.com
FRONTEND_URL_ALT=https://www.nyotatranslate.com
FRONTEND_URL_PROD=https://nyotatranslate.com

# CORS Origins (comma-separated list)
CORS_ORIGINS=https://nyotatranslate.com,https://www.nyotatranslate.com

# OpenAI API Configuration
OPENAI_API_KEY=your_production_openai_api_key_here

# Set to 'false' in production
USE_OPENAI_MOCK=false

# Firebase Admin Configuration - Using Service Account Key File
SERVICE_ACCOUNT_KEY_PATH=config/serviceAccountKey.json
FIREBASE_PROJECT_ID=ntc-app-7ac7e

# Timeout Configuration (in milliseconds)
REQUEST_TIMEOUT=300000
OPENAI_TIMEOUT=240000

# Database Configuration (if using additional databases)
# DATABASE_URL=your_production_database_url_here
